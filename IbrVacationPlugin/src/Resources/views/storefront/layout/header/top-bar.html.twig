{% sw_extends '@Storefront/storefront/layout/header/top-bar.html.twig' %}

{% block layout_header_top_bar %}
    {% if config("IbrVacationPlugin.config.vacation") and config("IbrVacationPlugin.config.showTopBar") and
        "now"|date('Y-m-d') >= config("IbrVacationPlugin.config.vacationFrom")|date('Y-m-d') and
            "now"|date('Y-m-d') <= config("IbrVacationPlugin.config.vacationTo")|date('Y-m-d') %}
        <div class="vacation-top-bar">
            {{ config("IbrVacationPlugin.config.topbarText") }}
        </div>
    {% endif %}
    {{ parent() }}
{% endblock %}